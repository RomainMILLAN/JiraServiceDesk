{% trans_default_domain 'adherent' %}

{% set currentRoute = app.request.attributes.get('_route') %}

<div class="topnav">
  <div class="container-fluid">
    <nav class="navbar navbar-dark navbar-expand-lg topnav-menu" hx-boost="true">
      <div class="collapse navbar-collapse" id="topnav-menu-content">
        <ul class="navbar-nav">

            <twig:nav:app:item-single
                path="app_dashboard"
                trans="dashboard.label"
                icon="mdi mdi-home-city"
                href="{{ path('app_dashboard') }}"
                role="{{ constant('App\\Enum\\User\\Role::ROLE_USER') }}"
            />

            <div data-title="{{ 'menu.title'|trans(domain: 'intro') }}" data-intro="{{ 'menu.project'|trans(domain: 'intro') }}" data-step="4">
              <twig:nav:app:item-single
                  path="app_project"
                  trans="project.label"
                  icon="uil-briefcase"
                  href="{{ path('app_project_list') }}"
                  role="{{ constant('App\\Enum\\User\\Role::ROLE_USER') }}"
              />
            </div>

            <div data-title="{{ 'menu.title'|trans(domain: 'intro') }}" data-intro="{{ 'menu.issue'|trans(domain: 'intro') }}" data-step="5">
              <twig:nav:app:item-single
                  path="app_issue_list"
                  trans="issue.label"
                  icon="uil-clipboard-alt"
                  href="{{ path('app_issue_list') }}"
                  role="{{ constant('App\\Enum\\User\\Role::ROLE_USER') }}"
              />
            </div>

            <div data-title="{{ 'menu.title'|trans(domain: 'intro') }}" data-intro="{{ 'menu.profil'|trans(domain: 'intro') }}" data-step="6">
              <twig:nav:app:item-single
                  path="app_profil"
                  trans="profile.label"
                  icon="mdi mdi-account-circle"
                  href="{{ path('app_profil') }}"
                  role="{{ constant('App\\Enum\\User\\Role::ROLE_USER') }}"
              />
            </div>

        </ul>
      </div>
    </nav>
  </div>
</div>
