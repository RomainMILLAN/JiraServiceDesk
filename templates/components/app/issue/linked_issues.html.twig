{% import "macros/issue.html.twig" as issueMacros %}

<div class="card">
    <h3>Tickets associ√©s</h3>

    {% for type,issues in links %}
        <div class="table-responsive">
            <table class="table table-centered table-striped">
                <thead>
                <tr>
                    <th colspan="3">{{ type }}</th>
                </tr>
                </thead>
                <tbody>
                {% for issue in issues %}
                    <tr>
                    <td>
                        <img src="{{ issue.fields.issuetype.iconUrl }}" alt="{{ issue.fields.issuetype.description }}" style="width: 12px;">
                    </td>
                    <td>
                        <a href="{{ absolute_url(path('browse_issue', {'keyIssue': issue.key })) }}">{{ issue.key }}</a>
                    </td>
                    <td><img src="{{ issue.fields.priority.iconUrl }}" class="priority-icon" alt="{{ issue.fields.priority.id }}">
                        <twig:app:issue:assignee
                                reporter="{{ issue.fields.assignee }}"
                        />
                        {{ issueMacros.issueStatus(issue) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endfor %}
</div>
