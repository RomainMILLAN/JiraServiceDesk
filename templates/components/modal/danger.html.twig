{% trans_default_domain 'app' %}
<!-- Danger Alert Modal -->
<!-- TO ADD: <button  type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#warning-alert-modal-ID">Danger Alert</button> -->

<div id="warning-alert-modal-{{ id }}" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content modal-filled bg-danger">
      <div class="modal-body p-4">
        <div class="text-center">
          <i class="ri-close-circle-line h1"></i>
          <h4 class="mt-2">{{ title }}</h4>
          <p class="mt-3">{{ description }}</p>

          <form action="{{ button_link }}" method="POST">
            <button type="submit" class="btn btn-light my-2" data-bs-dismiss="modal">{{ button_label }}</button>
          </form>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

