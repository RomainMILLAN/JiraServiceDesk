<twig:Turbo:Stream:Replace 
    target="#issue_view_attachments"
>
    {% trans_default_domain 'app' %}
    
    <div class="col-xxl-4 col-xl-5">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">{{ 'issue.attachment.label'|trans }}</h5>

                {% for attachment in issue.customAttachments %}
                    <div class="card my-1 shadow-none border">
                        <div class="p-2">
                            <div class="col align-items-center">
                                <img src="{{ path('app_issue_attachment_preview', {'attachmentId': attachment.id}) }}" alt="">
                                <div class="row align-items-center justify-content-center">
                                    <div class="col ps-2">
                                        <a href="{{ path('app_issue_attachment', {'attachmentId': attachment.id}) }}" target="_blank" class="text-muted fw-bold">{{ attachment.name }}</a>
                                        <p class="mb-0 text-muted">{{ attachment.author }}</p>
                                    </div>
                                    <div class="col-auto">
                                        <a href="{{ path('app_issue_attachment', {'attachmentId': attachment.id}) }}" target="_blank" class="btn btn-link btn-lg text-muted">
                                            <i class="ri-download-2-line"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
</twig:Turbo:Stream:Replace>