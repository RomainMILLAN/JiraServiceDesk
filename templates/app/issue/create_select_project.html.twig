{% extends 'app/issue/base.html.twig' %}

{% trans_default_domain 'app' %}

{% block pageTitle 'issue.titles.create'|trans() %}

{% block content %}
    <twig:form
        form="{{ form }}"
        cancelLink="{{ path('app_issue_list') }}"
    >
        <twig:block name="content">
            {% trans_default_domain 'app' %}

            <h4 class="mb-3">{{ 'issue.create.select_project.description'|trans }}</h4>

            <div class="row">
                {{ form_row(form.project) }}
            </div>

        </twig:block>
    </twig:form>
{% endblock %}
