{% extends 'app/issue/base.html.twig' %}

{% trans_default_domain 'app' %}

{% block pageTitle 'issue.label'|trans %}
{% set breadcrumb = [
    {
        label: '#' ~ key,
        href: path('app_issue_view', {key: key}),
    },
    {
        label: 'action.view',
    }
] %}

{% dump(issue) %}

{% block content %}
    <div class="row">
        <div class="col-xxl-8 col-xl-7">

            <div class="card d-block">
                <div class="card-body">
                    <div class="dropdown card-widgets">
                        <a href="#" class="dropdown-toggle arrow-none" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="uil uil-ellipsis-h"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a href="javascript:void(0);" class="dropdown-item">
                                <i class="uil uil-file-upload me-1"></i>Attachment
                            </a>
                            <a href="javascript:void(0);" class="dropdown-item">
                                <i class="uil uil-edit me-1"></i>Edit
                            </a>
                            <a href="javascript:void(0);" class="dropdown-item">
                                <i class="uil uil-file-copy-alt me-1"></i>Mark as Duplicate
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="javascript:void(0);" class="dropdown-item text-danger">
                                <i class="uil uil-trash-alt me-1"></i>Delete
                            </a>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <div class="d-flex flex-row align-items-center justify-content-start">
                        <img src="{{ issue.fields.issuetype.iconUrl }}" alt="{{ issue.fields.issuetype.description }}" style="width: 25px;">
                        <h3 class="ms-1">{{ issue.fields.summary }}</h3>
                    </div>

                    <div class="d-flex flex-column flex-md-row gap-md-5">

                        <div>
                            <!-- assignee -->
                            <p class="mt-2 mb-1 text-muted fw-bold font-12 text-uppercase">{{ 'issue.assignee.label'|trans }}</p>
                            <div class="d-flex">
                                {% if issue.fields.assignee is not null %}
                                    <span class="align-middle">
                                        {% if issue.fields.assignee.accountId == jira_account_id %}
                                            {{ app.user.fullName }}
                                        {% else %}
                                            <img src="{{ issue.fields.assignee.avatarUrls|first }}" alt="user-img" class="avatar-xs rounded-circle me-1">
                                            {{ issue.fields.assignee.displayName }}
                                        {% endif %}
                                    </span>
                                {% else %}
                                    <span class="fst-italic">{{ 'issue.assignee.not_assignee'|trans }}</span>
                                {% endif %}
                            </div>
                        </div>

                        <div>
                            <p class="mt-2 mb-1 text-muted fw-bold font-12 text-uppercase">{{ 'issue.status.label'|trans }}</p>
                            <div class="badge status-{{ issue.fields.status.statuscategory.colorName }}">
                                <p class="m-0 p-1 font-14">
                                    {{ issue.fields.status.name }}
                                </p>
                            </div>
                        </div>

                        <div>
                            <p class="mt-2 mb-1 text-muted fw-bold font-12 text-uppercase">{{ 'issue.priority.label'|trans }}</p>
                            <div class="d-flex align-items-center gap-1">
                                <img src="{{ issue.fields.priority.iconUrl }}" width="15px" alt="{{ issue.fields.priority.id }}">
                                <div>
                                    <h5 class="mt-1 font-14">
                                        {{ issue.fields.priority.name }}
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>


                    {% if issue.renderedFields.description is not empty %}
                        <h5 class="mt-3">{{ 'issue.description.label'|trans }}</h5>

                        <div>
                            {{ issue.renderedFields.description|raw }}
                        </div>
                    {% endif %}

                </div>

            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="my-1">{{ 'issue.comment.label'|trans }} (<span class="fst-italic">{{ issue.fields.comment.total }}</span>)</h4>
                </div>
                <div class="card-body">

                    {% for comment in comments %}
                        {% if comment.visibility is null %}
                            {% set avatarUrl = attribute(comment.author.avatarUrls, "48x48") %}
                            <div class="d-flex mt-3 mb-2">
                                <img class="me-2 rounded-circle" src="{{ avatarUrl }}" alt="Generic placeholder image" height="32">
                                <div class="w-100">
                                    <h5 class="mt-0">{{ comment.author.displayName }} <small class="text-muted float-end">{{ comment.updated|date('d/m/Y H:i') }}</small></h5>
                                    {{ comment.renderedBody|raw }}

                                    <br>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}

                    <div class="rounded">
                        {{ form_start(commentForm, {
                            attr: {
                                class: 'comment-area-box',
                            }
                        }) }}
                            {{ form_row(commentForm.comment, {
                                attr: {
                                    class: 'form-control border-0 resize-none',
                                    rows: '3',
                                }
                            }) }}
                            {{ form_row(commentForm.attachments) }}

                            <div class="d-flex flex-row justify-content-end">
                                <button type="submit" class="btn btn-sm btn-success"><i class="uil uil-message me-1"></i>{{ 'action.save'|trans }}</button>
                            </div>
                        {{ form_end(commentForm) }}
                    </div>

                </div>
            </div>
        </div>

        {% if issue.customAttachments|length > 0 %}
            <div class="col-xxl-4 col-xl-5">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-3">{{ 'issue.attachment.label'|trans }}</h5>

                        <form action="/" method="post" class="dropzone dz-clickable" id="myAwesomeDropzone" data-plugin="dropzone" data-previews-container="#file-previews" data-upload-preview-template="#uploadPreviewTemplate">


                            <div class="dz-message needsclick">
                                <i class="h3 text-muted ri-upload-cloud-2-line"></i>
                                <h4>Drop files here or click to upload.</h4>
                            </div>
                        </form>

                        <!-- Preview -->
                        <div class="dropzone-previews mt-3" id="file-previews"></div>

                        <!-- file preview template -->
                            <div class="d-none" id="uploadPreviewTemplate">
                                <div class="card mt-1 mb-0 shadow-none border">
                                    <div class="p-2">
                                        <div class="row align-items-center">
                                            <div class="col-auto">
                                                <img data-dz-thumbnail="" src="#" class="avatar-sm rounded bg-light" alt="">
                                            </div>
                                            <div class="col ps-0">
                                                <a href="javascript:void(0);" class="text-muted fw-bold" data-dz-name=""></a>
                                                <p class="mb-0" data-dz-size=""></p>
                                            </div>
                                            <div class="col-auto">
                                                <!-- Button -->
                                                <a href="" class="btn btn-link btn-lg text-muted" data-dz-remove="">
                                                    <i class="ri-close-line"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        {% for attachment in issue.customAttachments %}
                            <div class="card my-1 shadow-none border">
                                <div class="p-2">
                                    <div class="col align-items-center">
                                        <img src="{{ attachment.thumbnailUrl }}" alt="">
                                        <div class="row align-items-center justify-content-center">
                                            <div class="col ps-2">
                                                <a href="{{ attachment.url }}" target="_blank" class="text-muted fw-bold">{{ attachment.name }}</a>
                                                <p class="mb-0 text-muted">{{ attachment.author }}</p>
                                            </div>
                                            <div class="col-auto">
                                                <a href="{{ attachment.url }}" target="_blank" class="btn btn-link btn-lg text-muted">
                                                    <i class="ri-download-2-line"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
