{% trans_default_domain 'app' %}

<div class="row">
    <div class="col-md-6">
        {{ form_row(form.summary) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.type) }}
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        {{ form_row(form.priority) }}
    </div>
    {% if form.assignee is defined %}
    <div class="col-md-6">
        {{ form_row(form.assignee) }}
    </div>
    {% endif %}
</div>

<div class="row">
    {{ form_row(form.description, {
        row_attr: {
            class: 'mb-0'
        }
    }) }}
    <p class="text-muted">{{ 'issue.description.notice'|trans }}</p>
</div>

<div class="row">
    {{ form_row(form.attachments) }}
</div>
