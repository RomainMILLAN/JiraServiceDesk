<twig:Turbo:Stream:Replace 
    target="#issues_backlog_list_container_frame"
>
    {% trans_default_domain 'app' %}
    {% set datas = searchIssuesResult.issues %}
    {% set totalDatas = searchIssuesResult.total %}

    <div class="card" id="issues_backlog_list_container_frame">
        <div class="card-header">
            <h4>{{ 'project.title.backlogIssues'|trans }}</h4>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                {% if datas|length == 0 %}
                    <div class="alert alert-warning text-center" role="alert">
                        {{ 'list.pagination.empty'|trans }}
                    </div>
                {% else %}
                    <table id="table-crud" class="table table-centered table-striped" data-turbo-prefetch="false">
                        <thead>
                            <tr>
                                <th class="d-none d-md-table-cell">
                                    {% include 'components/list/sort-list-header.html.twig' with {
                                        'label': 'issue.jiraKey.label'|trans,
                                        'property': 'key',
                                    } %}
                                </th>
                                <th>
                                    {% include 'components/list/sort-list-header.html.twig' with {
                                        'label': 'issue.summary.label'|trans,
                                        'property': 'summary',
                                    } %}
                                </th>
                                <th class="d-none d-md-table-cell">
                                    {% include 'components/list/sort-list-header.html.twig' with {
                                        'label': 'issue.assignee.label'|trans,
                                        'property': 'assignee',
                                    } %}
                                </th>
                                <th class="d-none d-md-table-cell">
                                    {% include 'components/list/sort-list-header.html.twig' with {
                                        'label': 'issue.status.label'|trans,
                                        'property': 'status',
                                    } %}
                                </th>
                                <th class="d-none d-md-table-cell">
                                    {% include 'components/list/sort-list-header.html.twig' with {
                                        'label': 'issue.priority.label'|trans,
                                        'property': 'priority',
                                    } %}
                                </th>
                                <th class="min"></th>
                            </tr>
                        </thead>

                        <tbody id="issues_backlog_list_content">
                            {% include 'app/project/issue/_show_backlog_issues_body.html.twig' %}
                        </tbody>
                    </table>

                    <div class="d-flex flex-column flex-md-row justify-content-start justify-content-md-between align-items-start align-items-md-center">
                        <p class="mb-0 h-25">
                            {% if datas|length == 0 %}
                                {{ 'list.pagination.empty'|trans }}
                            {% elseif totalDatas is not null %}
                                {{ 'list.pagination.total'|trans({'%number%': totalDatas}) }}
                            {% endif %}
                        </p>

                        <div class="pagerfanta mt-4 pagination">
                            <ul class="pagination">
                                <li class="page-item" id="pagination_container">
                                
                                    {% include 'app/project/issue/_show_backlog_issues_pagination_next.html.twig' with {
                                        projectKeyValue: project.jiraKey,
                                        pageValue: searchIssuesResult.nextPageToken
                                    } %}
                                </li>
                            </ul>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</twig:Turbo:Stream:Replace>
