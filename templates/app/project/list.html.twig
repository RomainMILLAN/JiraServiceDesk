{% extends 'app/project/base.html.twig' %}

{% trans_default_domain 'app' %}

{% block pageTitle 'project.label'|trans %}
{% set breadcrumb = [
    {
        label: 'action.list',
    }
] %}

{% block content %}
    <div class="row">

        {% for project in projects %}
            {# @var project \Entity\Project #}

            <div class="col-md-6 col-xxl-3">
                <div class="card d-block">
                    <div class="card-body">
                        <h4 class="mt-0">
                            <a href="{{ path('app_project_view', {key: project.jiraKey}) }}" class="text-title">{{ project.name }} <i class="mdi mdi-share-all"></i></a>
                        </h4>
                        <div class="badge bg-secondary">{{ project.jiraKey }}</div>

                        <p class="text-muted font-13 my-3">{{ project.description }}</p>
                    </div>
                </div>
            </div>

        {% endfor %}

    </div>
{% endblock %}
