{% extends 'admin/user/base.html.twig' %}

{% trans_default_domain 'app' %}

{% block pageTitle 'project.title.edit'|trans({'%key%': entity.jiraKey}) %}
{% set breadcrumb = [
    {
        href: path('admin_project_edit', {id: entity.id}),
        label: entity.id,
    },
    {
        label: 'action.edit',
    }
] %}

{% block content %}
    <twig:form
        form="{{ form }}"
        cancelLink="{{ path('admin_project_list') }}"
    >
        <twig:block name="content">
            {% include 'admin/project/_form_content.html.twig' %}
        </twig:block>
    </twig:form>
{% endblock %}
