{% extends 'admin/user/base.html.twig' %}

{% trans_default_domain 'app' %}

{% block pageTitle 'user.edit.title'|trans({'%email%': entity.email}) %}
{% set breadcrumb = [
    {
        href: path('admin_user_edit', {id: entity.id}),
        label: entity.email,
    },
    {
        label: 'action.edit',
    }
] %}

{% block content %}
    <twig:form
        form="{{ form }}"
        cancelLink="{{ path('admin_user_list') }}"
    >
        <twig:block name="content">
            {% include 'admin/user/_form_content.html.twig' %}
        </twig:block>
    </twig:form>
{% endblock %}
