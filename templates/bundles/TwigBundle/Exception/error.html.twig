{% extends 'bundles/TwigBundle/Exception/layout.html.twig' %}
{% trans_default_domain 'error' %}

{% block content %}
    <div class="text-center">
        <h4 class="text-uppercase text-danger mt-3">{{ 'error.title'|trans }}</h4>
        <p class="text-muted mt-3">{{ 'error.description'|trans }}</p>

        <a class="btn btn-info mt-3" href="{{ path('security_login') }}"><i class="mdi mdi-reply"></i> {{ 'error.action'|trans }}</a>
    </div>
{% endblock %}
